b = int(input("Enter number of blocks: "))
l = int(input("Enter number of lines: "))
s = int(input("Enter number of stars: "))
c=0
for i in range(b):
    c=0
    for j in range(l-i):
        for s in range(l-i):
            for k in range(s):
                print('*', end =' ')
                c=c+1
        print()
    print(c)
    print("-------------------------------")
